# üéì Vibe Coding Academy - Student Environment Configuration
# Copy this file to .env and customize with your own Azure credentials

# Azure Configuration (Students: Replace with YOUR values)
AZURE_SUBSCRIPTION_ID=YOUR_AZURE_SUBSCRIPTION_ID
AZURE_RESOURCE_GROUP=your-student-resource-group
AZURE_CONTAINER_REGISTRY=your-student-registry
AZURE_CLIENT_ID=YOUR_CLIENT_ID
AZURE_CLIENT_SECRET=YOUR_CLIENT_SECRET
AZURE_TENANT_ID=YOUR_TENANT_ID

# Application Configuration
NODE_ENV=development
PORT=3000
VERSION=1.0.0

# 2x4 Platform Integration (Production OAuth Key - DO NOT MODIFY)
PLATFORM_2X4_OAUTH_KEY=your_oauth_key_from_instructor
PLATFORM_2X4_API_URL=https://2x4.hacsawduggan.com
STUDENT_TRACKING_ENABLED=true

# Optional: External API Keys (if you want to extend the platform)
GITHUB_TOKEN=your_github_token_here
API_RATE_LIMIT=100

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Database (Optional - for advanced projects)
DATABASE_URL=your_database_connection_string

# üöÄ Getting Started:
# 1. Copy this file: cp .env.example .env
# 2. Replace YOUR_* placeholders with your actual Azure credentials
# 3. Run: npm start
# 4. Visit: http://localhost:3000
# 5. Start building amazing APIs!

