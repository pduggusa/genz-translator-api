{
  "name": "genz-translator-api",
  "version": "3.0.0",
  "description": "Advanced content extraction API with browser emulation, popup handling, and structured data output for price tracking and inventory monitoring",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testNamePattern='Security Tests' --verbose",
    "test:security:checkov": "checkov --framework secrets --directory . --output cli",
    "test:security:comprehensive": "checkov --directory . --framework all --output cli",
    "test:unit": "jest --testPathPattern='tests/unit'",
    "test:integration": "jest --testPathPattern='tests/integration'",
    "test:e2e": "jest --testPathPattern='tests/e2e'",
    "test:cannabis": "jest --testPathPattern='tests/cannabis'",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:all": "npm run lint && npm run test:security:checkov && npm run test:ci",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "lint:security": "eslint src/ --ext .js --config .eslintrc.security.js",
    "security:scan": "npm run test:security:checkov",
    "security:report": "checkov --framework secrets --directory . --output json > security-report.json && echo 'Security report saved to security-report.json'",
    "security:validate": "./scripts/deploy-security-check.sh",
    "security:audit": "npm audit --audit-level moderate",
    "security:dependencies": "npm audit && retire --js --outputformat json",
    "deploy:check": "npm run security:validate && npm run test:all",
    "deploy:security-gate": "npm run security:audit && npm run security:validate && npm run test:security",
    "azure:build": "npm ci --production",
    "azure:start": "node src/server.js",
    "audit:fix": "npm audit fix --force",
    "clean": "rm -rf node_modules package-lock.json coverage",
    "reinstall": "npm run clean && npm install",
    "postinstall": "npx playwright install firefox --with-deps",
    "validate:production": "NODE_ENV=production npm run test:security && npm run security:audit",
    "build:fast": "./scripts/fast-local-build.sh",
    "build:container": "./scripts/fast-container-build.sh",
    "build:optimized": "docker build -f Dockerfile.containerapp.optimized -t cannabis-extractor:local ."
  },
  "keywords": [
    "web-scraping",
    "content-extraction",
    "browser-automation",
    "popup-handling",
    "price-tracking",
    "inventory-monitoring",
    "ecommerce-scraping",
    "playwright",
    "structured-data",
    "api",
    "nodejs",
    "express"
  ],
  "author": "PDuggusa <patrick@dugganusa.com>",
  "license": "MIT",
  "homepage": "https://github.com/pduggusa/genz-translator-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pduggusa/genz-translator-api.git"
  },
  "bugs": {
    "url": "https://github.com/pduggusa/genz-translator-api/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^7.1.0",
    "jsdom": "^25.0.1",
    "playwright": "^1.40.0",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^30.1.3",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.7",
    "retire": "^4.0.0",
    "supertest": "^7.0.0"
  },
  "peerDependencies": {
    "eslint": "^8.57.1"
  },
  "overrides": {
    "eslint": "^8.57.1"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "type": "commonjs"
}
