{
  "name": "vibe-coding-academy",
  "version": "1.0.0",
  "description": "üéµ Vibe Coding Academy - Learn web development through real projects while exploring security, networking, and career opportunities. From browser user to professional developer in 30 days.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testNamePattern='Security Tests' --verbose",
    "test:security:checkov": "checkov --framework secrets --directory . --output cli",
    "test:security:comprehensive": "checkov --directory . --framework all --output cli",
    "test:security:trufflehog": "trufflehog filesystem . --only-verified=false --fail",
    "test:security:semgrep": "semgrep --config=auto src/ --json --quiet --severity=WARNING",
    "test:security:all": "npm run test:security:trufflehog && npm run test:security:semgrep && npm run test:security:checkov",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:specialized": "jest tests/cannabis",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:all": "npm run lint && npm run test:security:checkov && npm run test:ci",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "lint:security": "eslint src/ --ext .js --config .eslintrc.security.js",
    "security:scan": "npm run test:security:all",
    "security:report": "semgrep --config=auto src/ --json --output=security-semgrep-report.json && trufflehog filesystem . --json > security-trufflehog-report.json && checkov --framework secrets --directory . --output json > security-checkov-report.json && echo 'Security reports saved: semgrep, trufflehog, checkov'",
    "security:validate": "./scripts/deploy-security-check.sh",
    "security:audit": "npm audit --audit-level moderate",
    "security:dependencies": "npm audit && retire --outputformat json",
    "security:full": "npm run security:audit && npm run security:scan && npm run security:dependencies",
    "deploy:check": "npm run security:validate && npm run test:all",
    "deploy:security-gate": "npm run security:full && npm run test:security",
    "azure:build": "npm ci --production",
    "azure:start": "node src/server.js",
    "audit:fix": "npm audit fix --force",
    "clean": "rm -rf node_modules package-lock.json coverage",
    "reinstall": "npm run clean && npm install",
    "postinstall": "npx playwright install firefox --with-deps",
    "validate:production": "NODE_ENV=production npm run test:security && npm run security:audit",
    "build:optimized": "./scripts/build-optimized.sh",
    "build:cached": "DOCKER_BUILDKIT=1 docker build -f Dockerfile.optimized -t vibe-coding-academy:cached --cache-from vibe-coding-academy:cache .",
    "build:production": "./scripts/build-acr-production.sh",
    "build:acr": "./scripts/build-acr-production.sh",
    "build:acr:amd64": "PLATFORM=linux/amd64 ./scripts/build-acr-production.sh",
    "cache:dependencies": "./scripts/cache-dependencies.sh",
    "cache:warm": "npm run cache:dependencies && docker pull node:20-slim",
    "version:current": "./scripts/version.sh current",
    "version:status": "./scripts/version.sh status",
    "version:patch": "./scripts/version.sh patch --push",
    "version:minor": "./scripts/version.sh minor --push",
    "version:major": "./scripts/version.sh major --push",
    "version:tag": "./scripts/version.sh tag --push",
    "version:dry-run:patch": "./scripts/version.sh patch --dry-run",
    "version:dry-run:minor": "./scripts/version.sh minor --dry-run",
    "version:dry-run:major": "./scripts/version.sh major --dry-run",
    "sbom:generate": "cyclonedx-npm --output-format JSON --output-file sbom.json",
    "sbom:generate:xml": "cyclonedx-npm --output-format XML --output-file sbom.xml",
    "sbom:validate": "cyclonedx-npm --validate sbom.json",
    "build:sbom": "npm run sbom:generate && npm run sbom:generate:xml",
    "quality:check": "npm run lint; npm run test:ci; npm run build:sbom; echo 'Quality checks completed (results may vary)'",
    "quality:report": "echo 'üìä Quality Report:'; npm run lint && echo '‚úÖ Linting passed' || echo '‚ö†Ô∏è Linting issues'; npm run test:ci && echo '‚úÖ Tests passed' || echo '‚ö†Ô∏è Test failures'; echo 'Report complete - issues are non-blocking'"
  },
  "keywords": [
    "coding-education",
    "web-development",
    "api-development",
    "security-fundamentals",
    "network-programming",
    "career-development",
    "vibe-coding",
    "beginner-friendly",
    "hands-on-learning",
    "tech-careers",
    "nodejs",
    "express",
    "cybersecurity",
    "penetration-testing",
    "networking"
  ],
  "author": "Vibe Coding Academy <learn@vibecoding.academy>",
  "license": "MIT",
  "homepage": "https://github.com/vibecoding/academy#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vibecoding/academy.git"
  },
  "bugs": {
    "url": "https://github.com/vibecoding/academy/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^7.1.0",
    "jsdom": "^25.0.1",
    "playwright": "^1.40.0",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@cyclonedx/cyclonedx-npm": "^4.0.2",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^30.1.3",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^3.0.1",
    "nodemon": "^3.1.7",
    "retire": "^4.0.0",
    "supertest": "^7.0.0"
  },
  "peerDependencies": {
    "eslint": "^8.57.1"
  },
  "overrides": {
    "eslint": "^8.57.1"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "type": "commonjs"
}
